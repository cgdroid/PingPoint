<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="?colorPrimary"
    android:paddingHorizontal="32dp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginHorizontal="10dp"
                android:text="Create Account"
                android:fontFamily="@font/satoshi_black"
                android:textSize="32sp"
                android:textColor="?colorOnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Please fill the input below."
                android:fontFamily="@font/satoshi_black"
                android:textSize="16sp"
                android:textColor="#4d495e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <include
                android:id="@+id/txt_field_full_Name"
                layout="@layout/textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp" />

            <include
                android:id="@+id/txt_field_phone"
                layout="@layout/textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/txt_field_email"
                layout="@layout/textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/txt_field_password"
                layout="@layout/textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/txt_field_confirm_password"
                layout="@layout/textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
            <!--            <androidx.appcompat.widget.AppCompatButton-->
            <!--                android:id="@+id/btn_register"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginHorizontal="16dp"-->
            <!--                android:layout_marginTop="40dp"-->
            <!--                android:background="@drawable/button_gray"-->
            <!--                android:text="Register"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="16sp" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="#00b8bd"
                android:background="@drawable/background_circular_button"
                android:text="SIGN UP"
                android:paddingVertical="18dp"
                android:fontFamily="@font/satoshi_black"
                android:textAllCaps="false"
                android:textColor="#3d3c43"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/wrapper_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALREADY HAVE AN ACCOUNT?"
                    android:textColor="#fdddfa"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="SIGN IN"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:scaleX="-1"
                    android:scaleY="-1"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icons8_back_48" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="64dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>

